@model Category
@{
    ViewData["Title"] = "Detail";
}

<form>
    <div class="container p-3">
    <div class="pt-4">
        <div class="col-6">
            <h3 class="text-primary">Category Detail</h3>
        </div>
        <br>
    </div>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Category</th>
                <th>Description</th>
                <th>Display Order</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            {
                <tr>
                    <td>@i</td>
                    @{i++;}
                    <td><input asp-for="Id" disabled /></td>
                    <td><input asp-for="Name" disabled></td>
                    <td><input asp-for="Description" disabled></td>
                    <td><input asp-for="DisplayOrder" disabled></td>
                    <td><input asp-for="CreatedDate" disabled></td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
</form>



