@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="pt-4">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <br>
        <div class="col-12 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-square"></i> &nbsp; Create a new category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>More detail</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var book in Model)
            {
                <tr>
                    <td>@i</td>
                    @{i++;}
                    <td>@book.Title</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Detail" asp-route-id="@book.Id" class="btn btn-primary" mx-2><i class="bi bi-box-arrow-up-right"></i></a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-primary mx-2"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>




</div>


